{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["domain/*"],
      "@app/*": ["app/*"]
    }
  },
  "include": ["app/**/*.ts", "domain/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
